#! /bin/sh

### BEGIN INIT INFO
# Provides:          hekad
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start hekad daemon at boot time
# Description:       Data collection and processing made easy. http://hekad.readthedocs.org/
### END INIT INFO

: ${ret:=0}
PROC=/usr/bin/hekad
PID_FILE="{{ heka_hekad_pid_file }}"

get_pid() {
    cat "$PID_FILE"
}

is_running() {
    [ -f "$PID_FILE" ] && ps `get_pid` > /dev/null 2>&1
}

start(){
  if [ -f $PID_FILE ]; then
        echo "Already started\n"
        exit
  else
        echo "Starting $PROC\n"
  fi

  daemon -n hekad -r -o {{ heka_hekad_log_file }} $PROC -- --config={{ heka_hekad_dir }}
}

stop(){
  daemon -n hekad --stop
}

case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  restart)
    stop
    start
  ;;
  status)
    if is_running; then
      echo "Heka is running"
    else
      echo "No process found"
      exit 1
    fi
  ;;
  *)
    echo $"Usage: $prog {start|stop|restart|status}"
    exit 3
  ;;
esac

exit $ret
